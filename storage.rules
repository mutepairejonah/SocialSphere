rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Avatar uploads - users can upload/update their own avatar
    match /avatars/{userId} {
      allow read: if true;  // Anyone can view avatars
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Post images/videos - authenticated users can upload
    match /posts/{allPaths=**} {
      allow read: if true;  // Anyone can view posts
      allow write: if request.auth != null;
    }
    
    // All other files - authenticated users only
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
